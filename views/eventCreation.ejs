<%- include('partials/header')-%>
<header>
  <!-- Intro settings -->
  <style>
    body{
      margin-top:20px;
      color: #1a202c;
      text-align: left;
      background-color: #e2e8f0;
    }
    .main-body {
      padding: 15px;
    }
    .card {
      box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
      position: relative;
      display: flex;
      flex-direction: column;
      min-width: 0;
      word-wrap: break-word;
      background-color: #fff;
      background-clip: border-box;
      border: 0 solid rgba(0,0,0,.125);
      border-radius: .25rem;
    }

    .card-body {
      flex: 1 1 auto;
      min-height: 1px;
      padding: 1rem;
    }

    .gutters-sm {
      margin-right: -8px;
      margin-left: -8px;
    }

    .gutters-sm>.col, .gutters-sm>[class*=col-] {
      padding-right: 8px;
      padding-left: 8px;
    }
    .mb-3, .my-3 {
      margin-bottom: 1rem!important;
    }

    .bg-gray-300 {
      background-color: #e2e8f0;
    }
    .h-100 {
      height: 100%!important;
    }
    .shadow-none {
      box-shadow: none!important;
    }
  </style>
</header>


<h2>Create a new event:</h2>
<form action="/eventCreation" method="POST">
  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
    <div class="card" style="height: 3rem;width: 29rem;">
      <div class="card-body">
        <label for="title">Event Name:</label>
        <input type="text" id="title" name="title" value="">
      </div>
    </div>
  </div
  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
    <div class="card" style="height: 3rem;width: 29rem;">
      <div class="card-body">
        <label for="description">Description of Event:</label>
        <input type="text" id="description" name="description" value="">
      </div>
    </div>
  </div
  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
    <div class="card" style="height: 4rem;width: 29rem;">
      <div class="card-body">
        <label for="date">Date of Event (mm/dd/yyyy):</label>
        <input type="text" id="date" name="date" value="">
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
    <div class="card" style="height: 8rem;width: 29rem;">
      <div class="card-body">
        <label for="type">Type:</label>
        <select id="type" name="type" size="4">
          <option value="volunteer">Volunteer</option>
          <option value="academic">Academic</option>
          <option value="club">Club</option>
          <option value="internship">Internship</option>
        </select>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
    <div class="card" style="height: 8rem;width: 29rem;">
      <div class="card-body">
        <label for="members">Member Emails (separated by commas):</label>
        <input type="text" id="members" name="members" value="">
      </div>
    </div>
  </div>
  <br><br>
  <input type="submit" value="Create Event">

</form>


<%- include('partials/footer') -%>
